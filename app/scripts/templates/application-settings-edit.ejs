<form id="applicationSettingsForm" action="" method="" class="applicationSettingsForm">
  <ul class="fieldset">

    <li>
      <label for="serverURL">Server URL</label>
      <input type="text" name="serverURL" class="dative-input"
        value="<%= serverURL %>" />
    </li>

    <li>
      <label for="serverPort">Server port</label>
      <input type="text" name="serverPort" class="dative-input"
      value="<%= serverPort %>" />
    </li>

    <li>
      <label for="loggedIn">Logged in</label>
      <div class="input-display"><%= loggedIn %></div>
    </li>

    <li>
      <label for="username">Username</label>
      <div class="input-display"><%= username %></div>
    </li>

    <li>
      <label for="persistenceType">Persistence type</label>
      <input type="text" name="persistenceType" class="dative-input"
      value="<%= persistenceType %>" />
    </li>

    <li>
      <label for="schemaType">Schema type</label>
      <input type="text" name="schemaType" class="dative-input"
      value="<%= schemaType %>" />
    </li>

    <li class="center">
      <button class="view">View</button>
      <button type="submit" class="save">Save</button>
    </li>

  </ul>
</form>
